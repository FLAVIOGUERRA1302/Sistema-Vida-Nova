<h1>Interessado</h1>
<div ng-controller="InteressadoControl" >
    <div class="row">
        <button class="btn btn-default" ng-click="novo()">Novo</button>
    </div>
    <br />
    
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead class="cf">
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Celular</th>
                    <th>Telefone</th>
                    
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="interessado in interessados" >
                    <td>{{interessado.nome}}</td>
                    <td>{{interessado.email}}</td>
                    <td>{{interessado.celular}}</td>
                    <td>{{interessado.telefone}}</td>
                    
                    <td>
                        <div uib-dropdown>
                            <a class="btn  btn-xs close" uib-dropdown-toggle>
                                <span class="fa fa-bars">
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right" uib-dropdown-menu role="menu" aria-labelledby="btn-append-to-body">
                                <li role="menuitem"><a href="#" ng-click="editar(interessado)"><i class="glyphicon glyphicon-pencil"></i><span>Editar</span></a></li>
                                <li role="menuitem"><a href="/Interessado/Detalhe/{{interessado.id}}" ><i class="glyphicon glyphicon-eye-open"></i><span>Detalhes</span></a></li>
                                <li role="menuitem"><a href="#" ng-click="delete(interessado)"><i class="glyphicon glyphicon-remove"></i><span>Excluir</span></a></li>

                            </ul>
                        </div>

                    </td>
                </tr>
        </table>
    </div>
</div>

<script type="text/ng-template" id="InteressadoCreate.html">
    <div class="modal-header">
        <h3 class="modal-title" >Novo</h3>
    </div>
    <div class="modal-body">
        <div class="row">

            <form name="form" class="form-horizontal">

                <div class="form-group">
                    <label class="col-md-2 control-label">Nome</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" ng-model="interessado.nome" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Email</label>
                    <div class="col-md-10">
                        <input type="email" class="form-control" ng-model="interessado.email" required />
                    </div>
                </div>

                

                <div class="form-group">
                    <label class="col-md-2 control-label">Celular</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" ng-model="interessado.celular" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Telefone</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" ng-model="interessado.telefone" />
                    </div>
                </div>

                

            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="salvar()" ng-disabled="!valido()" >Salvar</button>
        <button class="btn btn-warning" type="button" ng-click="cancelar()" >Cancelar</button>
    </div>
</script>

<script type="text/ng-template" id="InteressadoUpdate.html">
    <div class="modal-header">
        <h3 class="modal-title">Atualizar</h3>
    </div>
    <div class="modal-body">
        <div class="row">
            
            <form name="form" class="form-horizontal">
            
                <div class="form-group">
                    <label class="col-md-2 control-label">Nome</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" ng-model="interessado.nome" required/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Email</label>
                    <div class="col-md-10">
                        <input type="email" class="form-control" ng-model="interessado.email" required/>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-2 control-label">Celular</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" ng-model="interessado.celular" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Telefone</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" ng-model="interessado.telefone" />
                    </div>
                </div>

            
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="salvar()" ng-disabled="!valido()">Salvar</button>
        <button class="btn btn-warning" type="button" ng-click="cancelar()">Cancelar</button>
    </div>
</script>


