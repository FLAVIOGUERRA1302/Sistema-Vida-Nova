<h1>Voluntários</h1>
<div ng-controller="VoluntarioControl" >
    <div class="row">
        <button class="btn btn-default" ng-click="novo()">Novo</button>
    </div>
    <br />
    
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead class="cf">
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Celular</th>
                    <th>Telefone</th>
                    <th>Data de Nascimento</th>
                    <th>Data de Cadastro</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="voluntario in voluntarios" >
                    <td>{{voluntario.nome}}</td>
                    <td>{{voluntario.email}}</td>
                    <td>{{voluntario.celular}}</td>
                    <td>{{voluntario.telefone}}</td>
                    <td>{{voluntario.dataNascimento | date :'dd/MM/yy'}}</td>
                    <td>{{voluntario.dataDeCadastro | date :'dd/MM/yy'}}</td>
                    <td>
                        <div uib-dropdown>
                            <a class="btn  btn-xs close" uib-dropdown-toggle>
                                <span class="fa fa-bars">
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right" uib-dropdown-menu role="menu" aria-labelledby="btn-append-to-body">
                                <li role="menuitem"><a href="#" ng-click="editar(voluntario)"><i class="glyphicon glyphicon-pencil"></i><span>Editar</span></a></li>
                                <li role="menuitem"><a href="/Voluntario/Detalhe/{{voluntario.id}}" ><i class="glyphicon glyphicon-eye-open"></i><span>Detalhes</span></a></li>
                                <li role="menuitem"><a href="#" ng-click="delete(voluntario)"><i class="glyphicon glyphicon-remove"></i><span>Excluir</span></a></li>

                            </ul>
                        </div>

                    </td>
                </tr>
        </table>
    </div>
</div>

<script type="text/ng-template" id="VoluntarioCreate.html">
    <div class="modal-header">
        <h3 class="modal-title" >Novo</h3>
    </div>
    <div class="modal-body">
        <div class="row">

            <form name="form" class="form-horizontal">

                <div class="form-group">
                    <label class="col-md-2 control-label">Nome</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" ng-model="voluntario.nome" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Email</label>
                    <div class="col-md-10">
                        <input type="email" class="form-control" ng-model="voluntario.email" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">CPF</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" ng-model="voluntario.cpf" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">RG</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" ng-model="voluntario.rg" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Celular</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" ng-model="voluntario.celular" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Telefone</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" ng-model="voluntario.telefone" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Sexo</label>
                    <div class="col-md-10">
                        <select class="col-md-12 form-control" ng-model="voluntario.sexo" required>
                            <option value="M">Masculino</option>
                            <option value="F">Feminino</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Data de Nascimento</label>
                    <div class="col-md-10">
                        <input type="date" class="form-control" ng-model="voluntario.dataNascimento" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Disponibilidade</label>
                    <div class="col-md-10">
                        <dl class="dl-horizontal">
                            <dd>
                                <label class="ui-checkbox"><input type="checkbox" ng-model="voluntario.domingo"><span>Domingo</span></label>
                                <label class="ui-checkbox"><input type="checkbox" ng-model="voluntario.SegundaFeira "><span>Segunda</span></label>
                                <label class="ui-checkbox"><input type="checkbox" ng-model="voluntario.TercaFeira "><span>Terça</span></label>
                                <label class="ui-checkbox"><input type="checkbox" ng-model="voluntario.QuartaFeira "><span>Quarta</span></label>
                                <label class="ui-checkbox"><input type="checkbox" ng-model="voluntario.QuintaFeira "><span>Quinta</span></label>
                                <label class="ui-checkbox"><input type="checkbox" ng-model="voluntario.SextaFeira "><span>Sexta</span></label>
                                <label class="ui-checkbox"><input type="checkbox" ng-model="voluntario.Sabado "><span>Sabado</span></label>
                            </dd>
                        </dl>
                    </div>

                </div>

            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="button" ng-click="salvar()" ng-disabled="!valido()" >Salvar</button>
        <button class="btn btn-warning" type="button" ng-click="cancelar()" >Cancelar</button>
    </div>
</script>

